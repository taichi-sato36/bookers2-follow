<div class="body">
	<div class="container">
		<p id="notice"></p>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">


				<h1>Editing Book</h1>
				<% if flash[:notice] %>
					<div class="flash">
						<%= flash[:notice] %>
					</div>
				<% end %>

				<% if @book.errors.any? %>
				<div >
					<h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
					<ul>
						<% @book.errors.full_messages.each do |m| %>
						<li><%= m %></li>
						<% end %>
					</ul>
				</div>
				<% end %>
				<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
					<div class="field row">
						<label for="book_title">Title</label>
					<%= f.text_field :title %>
					</div>
					<div class="field row">
					<label for="book_opinion">Opinion</label>
					<%= f.text_area :body %>
					</div>
					<div class="actions row">
						<%= f.submit "Update Book" %>
					</div>
					<% end %>
					<p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>
			</div>
			<div class="col-md-3"></div>
		</div>
	</div>
</div>
