<% if flash[:notice] %>
	<div class="flash">
		<%= flash[:notice] %>
	</div>
<% end %>
<% if @newbook.errors.any? %>
<div class="col-xs-12" id="error_explanation">
	<h2>
		<%= @newbook.errors.count %> errors prohibited this book from being saved:</h2>
	<ul>
		<% @newbook.errors.full_messages.each do |m| %>
		<li><%= m %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<% if flash[:notice] %>
					<div class="flash">
						<%= flash[:notice] %>
					</div>
				<% end %>
				<h2>User info</h2>

				<%= attachment_image_tag current_user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "10*10" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th>name</th>
							<th><%= current_user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= current_user.introduction %>
						</tr>
						<tr class="follow">
							<th><%= link_to 'フォロー', user_follows_path(current_user.id) %></th>
							<th><%= current_user.followings.count %>人</th>
						</tr>
						<tr class="follower">
							<th><%= link_to 'フォロワー', user_followers_path(current_user.id) %></th>
							<th><%= current_user.followers.count %>人</th>
						</tr>
				<div>
					<%= render "users/follow_form", user: current_user %>
				</div>
					</tbody>
				</table>
				<div class="row">
					<% if current_user == current_user %>
					<p>
						<%= link_to '', edit_user_path(current_user.id), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
					</p>
					<% else %>
					<p>
						<%= link_to '', user_path(current_user.id), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
					</p>
					<% end %>
				</div>
				<%= render 'books/new-book', book: @newbook %>
			</div>
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<% @books.each do |book| %>
					<tbody>
						<tr>
							<td><%= link_to user_path(book.user_id) do %>
								<%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg" , size: "10*10" %>
									<% end %>
								</td>
							<td><%= link_to book.title, book_path(book.id) %></td>
							<td><%= book.body %></td>
						</tr>
					</tbody>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>



