

<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<% if flash[:notice] %>
					<div class="flash">
						<%= flash[:notice] %>
					</div>
				<% end %>
				<h2>User info</h2>

				<%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "10*10" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th>name</th>
							<th><%= @book.user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @book.user.introduction %>
						</tr>
						<tr class="follow">
							<th><%= link_to 'フォロー', user_follows_path(@book.user.id) %></th>
							<th><%= @book.user.followings.count %>人</th>
						</tr>
						<tr class="follower">
							<th><%= link_to 'フォロワー', user_followers_path(@book.user.id) %></th>
							<th><%= @book.user.followers.count %>人</th>
						</tr>
					</tbody>
				</table>
				<div>
					<%= render "users/follow_form", user: @book.user %>
				</div>
				<div class="row">
					<% if @book.user == current_user %>
					<p>
						<%= link_to '', edit_user_path(current_user.id), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
					</p>
					<% else %>
					<p>
						<%= link_to '', user_path(current_user.id), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
					</p>
					<% end %>
				</div>
				<%= render 'books/new-book', book: @newbook %>
			</div>
			<div class="col-xs-9">
				<h2>Book detail</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td><%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "10*10" %><br>
								<p><%= link_to @book.user.name, user_path(@book.user.id) %></p></td>
							<td><%= link_to @book.title, book_path %></td>
							<td><%= @book.body %></td>
							<% if @book.user == current_user %>
							<td><%= link_to "Edit", edit_book_path %></td>
							<% end %>
							<<% if @book.user == current_user %>
							<td><%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に削除しますか?" %></td>
							<% end %>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>



