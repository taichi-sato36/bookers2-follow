<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<% if flash[:notice] %>
					<div class="flash">
						<%= flash[:notice] %>
					</div>
				<% end %>
				<h2>User info</h2>
				<%= attachment_image_tag current_user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "10*10" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th>name</th>
							<th><%= current_user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= current_user.introduction %>
						</tr>
						<tr class="follow">
							<th><%= link_to 'フォロー', user_follows_path(current_user.id) %></th>
							<th><%= current_user.followings.count %>人</th>
						</tr>
						<tr class="follower">
							<th><%= link_to 'フォロワー', user_followers_path(current_user.id) %></th>
							<th><%= current_user.followers.count %>人</th>
						</tr>
				<div>
					<%= render "follow_form", user: current_user %>
				</div>
					</tbody>
				</table>
				<div class="row">
					<% if current_user == current_user %>
					<p>
						<%= link_to '', edit_user_path(current_user.id), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
					</p>
					<% else %>
					<p>
						<%= link_to '', user_path(current_user.id), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
					</p>
					<% end %>
				</div>
				<%= render 'books/new-book', book: @newbook %>
			</div>
			<div class="col-xs-9">
				<h2>Users</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th></th>
							<th></th>
							<th></th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<% @users.each do |user| %>
					<tbody>
						<tr>
							<td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "10*10" %></td>
							<td><%= user.name %></td>
							<td>フォロー:<%= user.followings.count %>人</td>
							<td>フォロワー:<%= user.followers.count %>人</td>
							<td><%= render "follow_form", user: user %></td>
							<td><%= link_to "Show", user_path(user.id) %></td>
						</tr>
					</tbody>
					<% end %>
				</table>
			</div>
		</div>
	</div>
</div>